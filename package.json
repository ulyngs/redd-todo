{
  "name": "redd-todo",
  "version": "2.0.0",
  "description": "ReDD Do - keep your goals in sight and get back to what you wanted to do",
  "main": "main.js",
  "scripts": {
    "dev": "tauri dev",
    "build": "tauri build",
    "build:mac": "tauri build --target universal-apple-darwin",
    "build:win": "tauri build --target x86_64-pc-windows-msvc",
    "build:linux": "tauri build --target x86_64-unknown-linux-gnu",
    "electron:start": "electron .",
    "electron:dev": "electron . --dev",
    "electron:build": "node build.js"
  },
  "keywords": [
    "todo",
    "task",
    "electron",
    "productivity"
  ],
  "author": {
    "name": "The Reduce Digital Distraction Project",
    "email": "team@reddfocus.org"
  },
  "license": "CC-BY-NC-ND-3.0",
  "dependencies": {
    "@tauri-apps/api": "^2.9.1",
    "electron-log": "^5.4.3",
    "electron-updater": "^6.6.2",
    "node-fetch": "^2.7.0"
  },
  "optionalDependencies": {
    "@redd/electron-panel-window-darwin": "file:vendor/electron-panel-window-darwin"
  },
  "devDependencies": {
    "@tauri-apps/cli": "^2.9.6",
    "dotenv": "^17.2.3",
    "electron": "^25.9.8",
    "electron-builder": "^26.0.12",
    "electron-icon-builder": "^2.0.1",
    "icon-gen": "^5.0.0",
    "quill": "^2.0.3",
    "sharp": "^0.34.5"
  }
}