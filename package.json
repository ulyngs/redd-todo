{
  "name": "redd-todo",
  "version": "0.8.0",
  "description": "ReDD Todo - keep your goals in sight and get back to what you wanted to do",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "node build.js",
    "build:mac": "node build.js --mac",
    "build:mas": "node build.js --mas",
    "build:win": "node build.js --win",
    "build:linux": "node build.js --linux",
    "postinstall": "electron-builder install-app-deps"
