    "electron": "^25.9.8",
    "electron-log": "^5.4.3",
    "electron-updater": "^6.6.2",
    "node-fetch": "^2.7.0"
  },
  "devDependencies": {
    "dotenv": "^17.2.3",
    "electron-builder": "^26.0.12",
    "electron-icon-builder": "^2.0.1",
    "icon-gen": "^5.0.0",
    "sharp": "^0.34.5"
  }
